{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"lib": ["es2017", "dom"],
		"jsx": "react",
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "./build/",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*"
	]
}
